<% unless comment.archived? %>
	<div class="comment">
		<p id="commenter">
			<strong><%= comment.commenter %></strong>
		</p>

		<p id="commentBody">
			<strong>Comment:</strong>
			<%= comment.body %>
		</p>

		<p>
			<%= link_to "Delete Comment", [comment.article, comment], data:
										   {
										     turbo_method: :delete,
											 turbo_confirm: "Are you sure?"
										   } %>
		</p>
	</div>
<% end %>
